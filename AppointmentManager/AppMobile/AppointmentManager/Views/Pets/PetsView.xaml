<?xml version="1.0" encoding="utf-8" ?>
<ctrls:PageBase  xmlns:ctrls="clr-namespace:AppointmentManager.Resources.Controls"
                 xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    HeaderTitle="Mascotas"
    Title="Lista de Mascotas"
    x:Class="AppointmentManager.Views.Pets.PetsView">

    <RefreshView IsRefreshing="{Binding IsRefresh}" Command="{Binding RefreshCommand}">
        <CollectionView ItemsSource="{Binding Pets}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="60, *">
                        <Image Grid.Column="0" Source="{Binding Image}"/>
                        <StackLayout Grid.Column="1">
                            <Label Text="{Binding PetName}" StyleClass="Title"/>
                            <Label Text="{Binding AninalSpecie}"/>
                            <Label Text="{Binding Breed}"/>
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
    <ctrls:PageBase.Fotter>

        <Grid ColumnDefinitions="*" ColumnSpacing="15">
            <Button Text="Agregar" Grid.Column="0" Command="{Binding Confirmar}" class="Primary"/>

        </Grid>
    </ctrls:PageBase.Fotter>

</ctrls:PageBase>