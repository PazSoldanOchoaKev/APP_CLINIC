<?xml version="1.0" encoding="UTF-8" ?>
<ctrls:PageBase
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrls="clr-namespace:AppointmentManager.Resources.Controls"
    x:Class="AppointmentManager.Views.Access.SingInView">

    <Grid RowDefinitions="*, Auto" class="Body">

        <Grid Grid.Row="1" ColumnDefinitions="*,*"
              HorizontalOptions="Fill"
              ColumnSpacing="10">

        </Grid>
    </Grid>
    <ctrls:PageBase.Fotter>
        <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
            <Button Text="Ingresar" class="Primary"/>
            <Button Text="Registrarse" Grid.Column="1"
                    Command="{Binding SingUp}"
                    class="Secondary"/>
        </Grid>
    </ctrls:PageBase.Fotter>
</ctrls:PageBase>
